@{
    ViewBag.Title = "Game Organizer";
    ViewBag.Description = "SP Tools";
}

<div class="row">
    <div class="col-xs-12 col-lg-4">
        <div class="small-box bg-purple">
            <div class="inner">
                <h3><span id="gameoffer"></span>/<sapn id="gamenum"></sapn></h3>

                <p>Games Organized</p>
            </div>
            <div class="inner">
                <h3 id="gamebalance2">8.999 EOS</h3>

                <p>Balance in Game </p>
            </div>
            <div class="icon">
                <i class="fa  fa-user"></i>
            </div>
            <a href="#" class="small-box-footer">
                Organizer info <i class="fa fa-arrow-circle-right"></i>
            </a>
            <!-- /.info-box-content -->
        </div>
    </div>
    <div class="col-xs-12 col-md-8">
        <div class="box box-solid box-warning">
            <div class="box-header">
                <h3 class="box-title">Launch a Game</h3>
            </div>
            <div class="box-body">



                <div class="form-group col-xs-12 col-lg-6">
                    <label>Base Bet (in EOS):</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa  fa-server"></i>
                        </div>
                        <input type="text" class="form-control" id="betpool" value="1.0" data-inputmask="'mask': '9{1,5}.9{1,4}'" data-mask="*">
                    </div>
                </div>
                <div class="form-group col-xs-12 col-lg-6">
                    <label> Game Duration(in 20 minutes):</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa  fa-server"></i>
                        </div>
                        <input type="text" class="form-control" id="gametime" value="1" data-inputmask="'mask': '9{1,1}'" data-mask="*">
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button class="center-block  btn btn-warning" style="width:260px" type="button" id="startgame">Start</button>
            </div>




        </div>
    </div>
</div>
